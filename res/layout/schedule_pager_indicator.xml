<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_height="wrap_content"
 			  android:layout_width="wrap_content"
 			  android:orientation="horizontal">

    <ImageView android:background="@drawable/left_button"
			   android:layout_height="24dp"
		  	   android:layout_width="24dp"	  	   
		  	   android:onClick="PreviousClick" 
		  	   android:contentDescription="@string/left_view_pager_button"/>
	  	       
    <TextView android:id="@+id/previous_indicator"        
			  android:layout_height="fill_parent"
	  	  	  android:layout_width="fill_parent"/>
    
	<LinearLayout android:id="@+id/schedule_header"
				  android:layout_height="fill_parent"
		  	  	  android:layout_width="0dp"
		  	  	  android:layout_weight="1"
		  	  	  android:orientation="vertical"
		  	  	  android:gravity="fill">
	    
	    <TextView android:id="@+id/current_indicator"        
			  android:layout_height="fill_parent"
	  	  	  android:layout_width="fill_parent"/>
	    
	</LinearLayout>
		  	   
	<TextView android:id="@+id/next_indicator"        
			  android:layout_height="fill_parent"
	  	  	  android:layout_width="fill_parent"/>
	
	<ImageView android:background="@drawable/right_button"
			   android:layout_height="24dp"
		  	   android:layout_width="24dp"
		  	   android:onClick="NextClick" 
		  	   android:contentDescription="@string/right_view_pager_button"/>	 
    			  
</LinearLayout>