<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_height="fill_parent"
 			  android:layout_width="fill_parent"
 			  android:orientation="vertical"
 			  android:paddingRight="5dp">
 
	<TextView android:id="@+id/session_quick_track"
			  android:padding="5dp"
			  android:textSize="20sp"
			  android:background="@color/frost"
			  android:textColor="@color/white" 
			  android:layout_gravity="center"
			  android:textStyle="bold"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"/>

	<TextView android:id="@+id/session_quick_name"
		  	  android:textSize="17sp"
			  android:gravity="center"
		  	  android:textStyle="bold"
		      android:layout_weight="1"
		  	  android:layout_gravity="center"
		  	  android:layout_height="0dp"
		  	  android:layout_width="wrap_content"/>	
			  
	<LinearLayout android:layout_width="fill_parent"
			      android:layout_height="wrap_content"
			  	  android:orientation="horizontal">
	    
		<TextView android:id="@+id/session_quick_speaker_primary"
		    	  android:layout_margin="5dp"
				  android:textSize="12sp"
				  android:textColor="@color/white" 
				  android:textStyle="bold"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"/>	
		  
		<TextView android:id="@+id/session_quick_speaker_secondary"
		    	  android:layout_marginLeft="30dp"
		    	  android:padding="5dp"
				  android:textSize="12sp"
				  android:textColor="@color/white" 
				  android:textStyle="bold"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"/>	
	    
	</LinearLayout>
	
</LinearLayout>